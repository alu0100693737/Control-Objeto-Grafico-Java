package controlBola;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JPanel;

public class PanelBotones extends JPanel {
	
	private JButton btnUp;
	private JButton btnDown;
	private JButton btnLeft;
	private JButton btnRight;
	public PanelBotones() {
		setLayout(new BorderLayout(5, 5));
		btnUp = new JButton("Up", BorderLayout.NORTH);
		btnDown = new JButton("Down", BorderLayout.SOUTH);
		btnLeft = new JButton("Left", BorderLayout.WEST);
		
		btnRight = new JButton("Right", BorderLayout.EAST);
		
		add(getbtnUp());
		add(getbtnDown());
		add(getbtnLeft());
		add(getbtnRight());
		
	}
	
	public JButton getbtnUp() {
		return btnUp;
	}
	
	public JButton getbtnDown() {
		return btnDown;
	}
	
	public JButton getbtnLeft() {
		return btnLeft;
	}

	public JButton getbtnRight() {
		return btnRight;
	}
}
